---
import { basics } from "@cv";
import Section from "@/components/Section.astro";
import Mail from "@/icons/Mail.svg";
import GitHub from "@/icons/GitHub.svg";
import Globe from "@/icons/Globe.svg";
import LinkedIn from "@/icons/LinkedIn.svg";
import Phone from "@/icons/Phone.svg";
import Twitter from "@/icons/Twitter.svg";

const { name, label, image, email, phone, summary, location, profiles } =
    basics;
const { city, region } = location;

const SOCIAL_ICONS: Record<string, any> = { GitHub, LinkedIn, Twitter };

const linkedInfo = profiles.find(({ network }) => network === "LinkedIn");
const linkedUrl = linkedInfo?.url;

const printInfo = [email, phone, linkedUrl].filter(Boolean).join(" • ");
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <figure class="small">
                <img src={image} alt={name} />
            </figure>
            <h2>{label}</h2>
            <span>
                <Globe />
                {city}, {region}
            </span>

            <footer class="print">
                {printInfo}
            </footer>
            <footer class="no-print holographic-container">
                {
                    email && (
                        <a
                            class="holographic-card"
                            href={`mailto:${email}`}
                            title={`Envía un correo a ${name} ao correo ${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Mail />
                        </a>
                    )
                }
                {
                    phone && (
                        <a
                            class="holographic-card"
                            href={`mailto:${phone}`}
                            title={`Llama a ${name} ao teléfono ${phone}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Phone />
                        </a>
                    )
                }
                {
                    profiles.map(({ network, url, username }) => {
                        const Icon = SOCIAL_ICONS[network];

                        return (
                            <a
                                class="holographic-card"
                                href={url}
                                title={`Visitar el perfil de ${name} ed ${network}`}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        );
                    })
                }
            </footer>
        </div>

        <figure class="big">
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: #444;
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 128px;
        border-radius: 16px;
    }

    section {
        max-width: 700px;
        margin: 0 auto 72px;
    }

    span {
        color: #666;
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }

    footer {
        display: flex;
        gap: 4px;
        margin-top: 8px;
        font-size: 0.65rem;
        color: #555;
    }

    footer a {
        color: #777;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover {
        background: #eee;
        border: 1px solid #ddd;
    }

    .holographic-card {
        display: flex;
        justify-content: center;
        align-items: center;
        position: relative;
        overflow: hidden;
        transition: all 0.5s ease;
    }

    .holographic-card::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(
            0deg,
            transparent,
            transparent 30%,
            rgba(253, 135, 208, 0.5)
        );
        transform: rotate(-45deg);
        transition: all 0.5s ease;
        opacity: 0;
    }

    .holographic-card:hover {
        transform: scale(1.05);
        box-shadow: 0 0 20px rgba(224, 74, 167, 0.726);
    }

    .holographic-card:hover::before {
        opacity: 1;
        transform: rotate(-45deg) translateY(100%);
    }

    .small {
        display: none;
    }

    @media (max-width: 500px) {
        .holographic-container {
            justify-content: center;
        }
        .container {
            justify-content: center;
            text-align: center;
        }

        .big {
            display: none;
        }

        .small {
            display: block;
        }
    }
</style>
